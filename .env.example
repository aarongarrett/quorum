# ============================================
# QUORUM - ENVIRONMENT VARIABLES EXAMPLE
# ============================================
# Copy this file to .env and fill in your values

# ------------------------------
# Environment Configuration
# ------------------------------
# Options: development, staging, production
# IMPORTANT: Set to 'production' in production to enable security validation
ENVIRONMENT=production

# ------------------------------
# Server Configuration
# ------------------------------
# Port to expose (default: 8000)
PORT=8000

# ------------------------------
# Database Configuration
# ------------------------------
# OPTION 1: Provide full database URL (recommended for simple deployments)
# For development: postgresql://quorum:quorum@localhost:5432/quorum
# For production: postgresql://username:password@host:5432/database_name
DATABASE_URL=postgresql://username:password@host:5432/database_name

# OPTION 2: Provide individual components (common in managed hosting)
# If DATABASE_URL is not set, these will be used to construct the connection string
# POSTGRES_USER=your_db_user
# POSTGRES_PASSWORD=your_db_password
# POSTGRES_HOST=your_db_host_or_ip
# POSTGRES_PORT=5432
# POSTGRES_DB=your_db_name

# ------------------------------
# Redis Configuration (Optional)
# ------------------------------
# Redis is used for distributed rate limiting across multiple instances
# For development/single instance: Can be omitted (will use in-memory storage)
# For production with Docker Compose: redis://redis:6379
# For managed Redis: redis://username:password@host:6379
# REDIS_URL=redis://redis:6379

# ------------------------------
# Database Connection Pool (Optional)
# ------------------------------
# Connection pool configuration for high-traffic deployments
# Defaults are tuned for ~200 concurrent SSE users
# DB_POOL_SIZE=15          # Base connection pool size
# DB_MAX_OVERFLOW=25       # Additional connections for traffic spikes (total max: pool_size + max_overflow)

# ------------------------------
# Security Configuration (REQUIRED)
# ------------------------------
# Generate SECRET_KEY with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-ME-generate-with-secrets-token-urlsafe-32

# Admin dashboard login password - MUST be changed for production
ADMIN_PASSWORD=CHANGE-ME-use-strong-password

# JWT Configuration (optional, defaults provided)
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ------------------------------
# CORS Configuration
# ------------------------------
# Comma-separated list of allowed origins
# For development: http://localhost:3000
# For production: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com

# ------------------------------
# Application Configuration (Optional)
# ------------------------------
APP_TITLE=Quorum Voting System
APP_DESCRIPTION=Anonymous QR-driven voting for meetings
APP_VERSION=2.0.0

# Timezone for meeting times (default: America/New_York)
TIMEZONE=America/New_York

# Frontend build path (default: ./frontend/build)
FRONTEND_BUILD_PATH=./frontend/build
